<div class="row-fluid">
  <div class="span12">
    <h3 class="page-title">
      活动
    </h3>
    <ul class="breadcrumb">
      <li>
        <i class="icon-home"></i>
        <a href="#/index">Home</a>
        <i class="icon-angle-right"></i>
      </li>
      <li>
        <a href="#/activities">活动</a>
        <i class="icon-angle-right"></i>
      </li>
      <li>
        <a href="#">{{activity.title}}</a>
      </li>
    </ul>
  </div>
</div>
<div class="form-horizontal">
  <div class="control-group">
    <label class="control-label">标题</label>
    <div class="controls">
      <input type="text" class="m-wrap large" ng-model='activity.title' required />
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">封面: </label>
    <div class="controls">
      <span class="help-block">建议尺寸: 360*200px</span>
      <img class="middle" ng-src="{{activity.cover}}">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <span class="btn blue fileinput-button">
        <i class="icon-plus"></i>
        <span>替换图片</span>
        <input id="imgupload" type="file" fileupload name="files" data-url="/upload" done="uploadFinished(e, data, 'cover')">
      </span>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">活动地址</label>
    <div class="controls">
      <input type="text" class="m-wrap large" ng-model='activity.adr' required />
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">开始时间</label>
    <div class="controls">
      <div class="input-append date form_datetime">
        <input size="16" type="text" class="m-wrap" ng-model='activity.startAt'>
        <span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">内容</label>
    <div class="controls">
      <script id="acteditor" type="text/plain" style="width:945px;height:500px;">
      </script>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn blue" ng-click="submit()"><i class="icon-ok"></i> 提交</button>
    <a class="btn" href='#/activitys'>撤销</a>
  </div>
</div>

<script>
  $(".form_datetime").datetimepicker({
    format: "yyyy-mm-dd hh:ii",
    autoclose: true,
    todayBtn: true,
    pickerPosition: (App.isRTL() ? "bottom-right" : "bottom-left")
  });
</script>
