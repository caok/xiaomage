<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0,user-scalable=no" />
  <title>活动</title>
  <link rel="stylesheet" href="/stylesheets/ser.css">
  <script type="text/javascript" src="/javascripts/jquery-2.1.1.min.js"></script>
</head>
<body>
<div id="container">
</div>

<script>
    var container = $('#container');
    var currentList = null;
    var currentPage = 0;

    function getContent(pagenum){
        $.get('/wechat/activity',{page:pagenum},function(rows){
            if(rows.length == 0)
                return;
            for(var i = 0; i < rows.length;i++){
                if( !currentList){
                    currentList = $('<div class="list2"></div>');
                    container.append(currentList);

                    currentList.append($(
                            '<div>'+
                    '<div class="message3" onclick="window.location.href=\'/wechat/activityDetail?id=' + rows[i].id + '\'">'+
                    '<div style="float: left;width: 68%">'+
                    '       <div class="title3">' +
                                   rows[i].entitle +'</div>'+
                    '<div class="content3">' +
                                   rows[i].time +'</div>'+
                    '</div>'+
                    '<img src="'+ rows[i].cover +'">'+
                    '<div class="clear"></div>'+
                    '</div>'
                    ))
                }
                else{
                    currentList.append($(
                                    '<div>'+
                                    '<table class="noTime">'+
                                    '       <tr style="width: 100%">'+
                                    '       <td style="width: 100%"><hr></td>'+
                                    '</tr>'+
                                    '</table>'+
                                    '<div class="message3" onclick="window.location.href=\'/wechat/activityDetail?id=' + rows[i].id + '\'">'+
                                    '<div style="float: left;width: 68%">'+
                                    '       <div class="title3">' +
                                    rows[i].entitle +'</div>'+
                                    '<div class="content3">' +
                                    rows[i].time +'</div>'+
                                    '</div>'+
                                    '<img src="'+ rows[i].cover +'">'+
                                    '<div class="clear"></div>'+
                                    '</div>'
                    ))
                }
                $("img").each(function(){
                  $(this).css("height", $(this).width());
                });
            }

        },"json");
    }


    $(function(){
        getContent(0);
        currentPage++;
    })

    $(window).scroll(function(){
        if($(window).scrollTop() > $(document).height() - $(window).height() - 50){
            getContent(currentPage);
            currentPage++;
        }
    })

</script>

</body>
</html>
